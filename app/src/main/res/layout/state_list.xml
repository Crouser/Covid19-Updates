<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="4dp"

            android:layout_weight="3.3"
            app:cardCornerRadius="5dp"

            android:background="#4A465B"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4A465B">

                <TextView
                    android:id="@+id/state"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/glegoo"
                    android:gravity="left"
                    android:text="State"
                    android:textColor="#B0BEC5"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="4dp"

            android:layout_marginRight="1dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="3.8"
            app:cardCornerRadius="5dp"

            android:background="#4A465B"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4A465B"
                android:gravity="right">

                <ImageView
                    android:id="@+id/redArrow"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"

                    android:layout_gravity="center"
                    app:srcCompat="@drawable/arrowr" />

                <TextView
                    android:id="@+id/dsTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/glegoo"
                    android:gravity="center"
                    android:text="34523"
                    android:textColor="#FF0004"
                    android:textSize="7sp" />

                <TextView
                    android:id="@+id/sTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"


                    android:layout_marginRight="2dp"
                    android:fontFamily="@font/glegoo"
                    android:gravity="center"
                    android:text="456674"
                    android:textColor="#B0BEC5"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="4dp"

            android:layout_weight="4"
            app:cardCornerRadius="5dp"

            android:background="#4A465B"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4A465B"
                android:gravity="right">


                <TextView
                    android:id="@+id/sActive"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"


                    android:layout_marginRight="2dp"
                    android:fontFamily="@font/glegoo"
                    android:gravity="center"
                    android:text="456674"
                    android:textColor="#B0BEC5"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="4dp"
            android:background="#4A465B"
            android:layout_weight="3.9"
            app:cardCornerRadius="5dp"


            app:cardElevation="5dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4A465B"
                android:gravity="right">

                <ImageView
                    android:id="@+id/greenArrow"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"

                    android:layout_gravity="center"
                    app:srcCompat="@drawable/arrowg" />

                <TextView
                    android:id="@+id/dsRecov"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/glegoo"
                    android:gravity="center"
                    android:text="34523"
                    android:textColor="#00FF09"
                    android:textSize="7sp" />

                <TextView
                    android:id="@+id/sRecov"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"


                    android:layout_marginRight="2dp"
                    android:fontFamily="@font/glegoo"
                    android:gravity="center"
                    android:text="456674"
                    android:textColor="#B0BEC5"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:background="#4A465B"
            android:layout_weight="4"
            app:cardCornerRadius="5dp"


            app:cardElevation="5dp"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4A465B"
                android:gravity="right">

                <ImageView
                    android:id="@+id/greyArrow"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"

                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_arrow_upward_black_24dp" />

                <TextView
                    android:id="@+id/dsDeaths"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/glegoo"
                    android:gravity="center"
                    android:text="34523"
                    android:textColor="#2C2929"
                    android:textSize="7sp" />

                <TextView
                    android:id="@+id/sDeaths"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"


                    android:layout_marginRight="2dp"
                    android:fontFamily="@font/glegoo"
                    android:gravity="center"
                    android:text="45667"
                    android:textColor="#B0BEC5"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>